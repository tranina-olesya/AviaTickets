<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.vsu.aviatickets">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.fullticket.FullTripActivity"
            android:label="@string/title_activity_full_trip"
            android:parentActivityName=".ui.ticketresults.TripActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.vsu.aviatickets.ui.ticketresults.TripActivity" />
        </activity>
        <activity android:name=".ui.ticketresults.TripActivity"
            android:parentActivityName=".ui.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.vsu.aviatickets.ui.main.MainActivity" />
        </activity>
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity android:name=".ui.bookmarks.BookmarksRouteActivity">

        </activity>
    </application>

</manifest>