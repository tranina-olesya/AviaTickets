<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:paddingVertical="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@id/buttonPrice"
        android:id="@+id/agentImage"
        app:layout_constraintTop_toTopOf="@id/buttonPrice"
        app:layout_constraintBottom_toBottomOf="@id/buttonPrice"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingEnd="15dp"
        android:id="@+id/price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonPrice"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonPrice"
        android:id="@+id/buttonPrice"
        android:drawableRight="@drawable/airplane"
        android:drawablePadding="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>