<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners
                android:radius="40dp" />

            <solid
                android:color="@color/white"/>

            <stroke
                android:color="@color/black_alpha_22"
                android:width="1dp"/>
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="10dp"
        android:top="5dp">
        <bitmap
            android:gravity="right"
            android:src="@drawable/arrow_down" />
    </item>
</layer-list>